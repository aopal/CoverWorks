{
    "manifest_version": 2,
    "name": "WaterlooWorks Cover Letter Generator",
    "version": "0.0.2",
    "description": "Generate cover letters in WaterlooWorks",
    "options_page": "options.html",
    "permissions": [
      "downloads",
      "tabs",
      "storage"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "content_scripts": [{
        "matches": ["*://waterlooworks.uwaterloo.ca/myAccount/co-op/coop-postings.htm"],
        "js": ["content_script.js"],
        "run_at": "document_end"
    }],
    "web_accessible_resources": [
      "base.html",
      "mappings.json",
      "ace.js",
      "mode-json.js",
      "mode-html.js",
      "theme-monokai.js"
    ]
}
